<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background"
        tools:context=".ui.profile.ProfileFragment"
        >


    <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"

            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/materialToolbar2">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="330dp"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="@string/profile"
                    android:background="@drawable/text_view_background"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="24sp"
                    android:id="@+id/tvProfile"/>

            <ImageButton
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_marginLeft="8dp"
                    android:src="@drawable/shopping_cart"
                    android:backgroundTint="#00FFFFFF"/>

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>


    <com.google.android.material.textview.MaterialTextView
            android:text="Логин"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:background="@drawable/bg_panel_profile"
            android:textSize="20sp"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"

            android:layout_marginTop="8dp"
            android:layout_height="80dp" android:id="@+id/tvLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/profileImage"/>
    <com.google.android.material.textview.MaterialTextView
            android:text="@string/exit_account"
            android:layout_width="match_parent"
            android:background="@drawable/bg_panel_profile"
            android:textSize="20sp"
            android:textColor="@color/text_blue"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"

            android:layout_height="80dp" android:id="@+id/tvExit"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"/>
    <com.google.android.material.textview.MaterialTextView
            android:text="Номер телефона"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:background="@drawable/bg_panel_profile"
            android:textSize="20sp"
            android:gravity="top"
            android:paddingLeft="10dp"
            android:paddingTop="8dp"

            android:layout_height="80dp" android:id="@+id/tvNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/tvLogin"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="333dp"
            android:layout_height="332dp" android:id="@+id/profileImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:src="@drawable/profile_img"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="92dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>