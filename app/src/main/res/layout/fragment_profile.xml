<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/screen_bg"
        tools:context=".ui.profile.ProfileFragment" tools:layout_editor_absoluteY="252dp"
        tools:layout_editor_absoluteX="0dp">


    <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"

            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/materialToolbar2">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <com.google.android.material.textview.MaterialTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/profile"
                    android:background="@drawable/text_view_background"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="24sp"
                    android:id="@+id/tvProfile"/>

        </LinearLayout>

    </com.google.android.material.appbar.MaterialToolbar>




    <com.google.android.material.textview.MaterialTextView
            android:text="Номер телефона"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_bg"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="60dp" android:id="@+id/tvNumber"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintTop_toBottomOf="@+id/tvLogin"
            android:layout_marginTop="@dimen/margin_for_profile"/>
    <com.google.android.material.textview.MaterialTextView
            android:text="Логин"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_bg"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginTop="@dimen/margin_for_profile"
            android:layout_height="60dp" android:id="@+id/tvLogin"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/profileImage"/>
    <com.google.android.material.textview.MaterialTextView
            android:text="Электронная почта"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_bg"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="60dp" android:id="@+id/tvEmail"
            app:layout_constraintTop_toBottomOf="@+id/tvNumber" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_for_profile" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:layout_width="262dp"
            android:layout_height="261dp" tools:src="@tools:sample/avatars" android:id="@+id/profileImage"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.496"
            tools:srcCompat="@android:drawable/ic_dialog_info" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="72dp"/>
    <com.google.android.material.textview.MaterialTextView
            android:text="@string/exit_account"
            android:layout_width="match_parent"
            android:background="@drawable/edit_text_bg"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_height="60dp" android:id="@+id/tvExit"
            app:layout_constraintTop_toBottomOf="@+id/tvEmail" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/margin_for_profile" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"/>
</androidx.constraintlayout.widget.ConstraintLayout>